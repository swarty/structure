{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}